---
import type { HeroProps } from "@types";
import { SITE_CONFIG } from "@config";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;

const linkedin = SITE_CONFIG.socialLinks.find((s) => s.text.toLowerCase().includes("linkedin"))?.href;
const github = SITE_CONFIG.socialLinks.find((s) => s.text.toLowerCase().includes("github"))?.href;
const devto = SITE_CONFIG.socialLinks.find((s) => s.text.toLowerCase().includes("dev"))?.href;
const mail = SITE_CONFIG.socialLinks.find((s) => s.text.toLowerCase().includes("email"))?.href;
---

<section class="py-24 md:py-32" id="#hero">
  <div class="rounded-2xl border border-neutral/20 bg-[#1c232d]/85 p-8">
    <div class="flex flex-col md:flex-row items-center md:items-start gap-10">
      <div class="flex-shrink-0 w-48 h-48 md:w-80 md:h-80 rounded-2xl overflow-hidden bg-neutral-800 shadow-lg mb-8 md:mb-0">
        <img
          src="/Holder.jpg"
          alt="Profile photo of Hrishikesh Karande"
          class="w-full h-full object-cover object-center"
          width="320"
          height="320"
        />
      </div>
      <div class="flex-1">
        <h1
          class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-8xl"
        >
          {name}
        </h1>
        <div class="flex flex-row items-center gap-3 mb-9">
          <p
            class="font-serif text-2xl leading-[36px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl mb-0"
          >
            {specialty}
          </p>
          <a
            class="inline-block rounded-full bg-primary px-4 py-2 text-xs font-medium text-[#fff] whitespace-nowrap"
            href="/cv.pdf" download target="_blank" rel="noopener noreferrer"
          >Download CV</a>
        </div>
        <p class="mb-6 text-base font-normal text-neutral md:text-lg">
          {summary}
        </p>

        <div class="flex flex-wrap items-center gap-3">
          {linkedin ? (
            <a href={linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-full border border-neutral/20 px-3 py-2 text-sm text-white hover:bg-white/5">
              LinkedIn
            </a>
          ) : null}
          {github ? (
            <a href={github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-full border border-neutral/20 px-3 py-2 text-sm text-white hover:bg-white/5">
              GitHub
            </a>
          ) : null}
          {devto ? (
            <a href={devto} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-full border border-neutral/20 px-3 py-2 text-sm text-white hover:bg-white/5">
              Blog
            </a>
          ) : null}
          {mail ? (
            <a href={mail} class="inline-flex items-center gap-2 rounded-full border border-neutral/20 px-3 py-2 text-sm text-white hover:bg-white/5">
              Email
            </a>
          ) : null}
        </div>
      </div>
    </div>
  </div>
</section>
