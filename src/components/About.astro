---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <div class="w-full rounded-2xl border border-neutral/20 bg-[#1c232d]/85 p-6 flex flex-col md:flex-row items-center gap-8">
      <div class="flex-1">
        {description.split('\n\n').map((para) => (
          <p class="text-base text-neutral md:pr-5 mb-4">{para.trim()}</p>
        ))}
      </div>
      <div
        class="h-80 w-64 flex-shrink-0 rotate-[5deg] bg-white p-4 md:rotate-[7deg] md:translate-x-8 lg:translate-x-12 md:z-10"
        style="transform-origin: center;"
      >
        <Image
          class="object-cover"
          src={image}
          width="260"
          height="260"
          alt={name}
        />
      </div>
    </div>
  </div>
</Section>
